-- Create a table for storing categories
CREATE TABLE Categories (
    CategoryID INT PRIMARY KEY AUTO_INCREMENT,
    CategoryName VARCHAR(255) NOT NULL
);

-- Insert the categories into the Categories table
INSERT INTO Categories (CategoryName) VALUES ('Adv Finance');
INSERT INTO Categories (CategoryName) VALUES ('Python');
INSERT INTO Categories (CategoryName) VALUES ('Computer Forensics');
INSERT INTO Categories (CategoryName) VALUES ('Database');

-- Create a table for storing questions
CREATE TABLE Questions (
    QuestionID INT PRIMARY KEY AUTO_INCREMENT,
    CategoryID INT,
    QuestionText TEXT NOT NULL,
    FOREIGN KEY (CategoryID) REFERENCES Categories(CategoryID)
);

-- Create a table for storing possible answers
CREATE TABLE Answers (
    AnswerID INT PRIMARY KEY AUTO_INCREMENT,
    QuestionID INT,
    AnswerText VARCHAR(255) NOT NULL,
    IsCorrect BOOLEAN NOT NULL,
    FOREIGN KEY (QuestionID) REFERENCES Questions(QuestionID)
);
